<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/add_checkup_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context=".DoctorHomeFragments.CheckupDetailsPatient">


        <ScrollView
            android:id="@+id/ckscrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:elevation="3dp"
                    android:background="@drawable/myrect"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/profile_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"

                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="26dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkup_details_back_button"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/app_back_button" />

                        <TextView
                            android:id="@+id/settings_label_safe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik"
                            android:gravity="center"
                            android:text="CHECKUP DETAILS"
                            android:textColor="@color/black"
                            android:textSize="24sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/checkup_details_profile_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/profile_toolbar"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/doctor_profile_image" />

                        <TextView
                            android:id="@+id/checkup_details_doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/rubik_bold"
                            android:gravity="center"
                            android:text="Dr.Sumit Dadwal"
                            android:textColor="@color/scnd_blue"
                            android:textSize="20sp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik"
                                android:text="CASE OF:"
                                android:textColor="#454545"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/checkup_details_department"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/rubik"
                                android:text="ORTHOLOGIST"
                                android:textColor="@color/scnd_blue"
                                android:textSize="16sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik"
                                android:text="AGE:"
                                android:textColor="#454545"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/checkup_details_age"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/rubik"
                                android:text="34"
                                android:textColor="@color/scnd_blue"
                                android:textSize="16sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik"
                                android:text="@string/gender"
                                android:textColor="#454545"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/checkup_details_gender"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/rubik"
                                android:text="MALE"
                                android:textColor="@color/scnd_blue"
                                android:textSize="16sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="38dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/checkup_details_call_button"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/callbg"
                                    android:gravity="center">

                                    <androidx.constraintlayout.utils.widget.ImageFilterButton
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_below="@+id/profile_toolbar"
                                        android:layout_centerHorizontal="true"
                                        android:background="@color/scnd_light_blue"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_call_db" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/rubik"
                                    android:text="CALL"
                                    android:textColor="#454545"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/checkup_details_share_button"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/callbg"
                                    android:gravity="center">

                                    <androidx.constraintlayout.utils.widget.ImageFilterButton
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:background="@color/scnd_light_blue"

                                        android:layout_below="@+id/profile_toolbar"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_sharedb" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/rubik"
                                    android:text="SHARE"
                                    android:textColor="#454545"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/checkup_details_chat_button"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/callbg"
                                    android:gravity="center">

                                    <androidx.constraintlayout.utils.widget.ImageFilterButton
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_below="@+id/profile_toolbar"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:background="@color/scnd_light_blue"
                                        android:src="@drawable/ic_messagedb" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/rubik"
                                    android:text="CHAT"
                                    android:textColor="#454545"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/checkup_details_edit_button"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/callbg"
                                    android:gravity="center">

                                    <androidx.constraintlayout.utils.widget.ImageFilterButton
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:background="@color/scnd_light_blue"
                                        android:layout_below="@+id/profile_toolbar"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"

                                        android:src="@drawable/ic_editdb" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/rubik"
                                    android:text="EDIT"
                                    android:textColor="#454545"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>




                </androidx.appcompat.widget.LinearLayoutCompat>






                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="174dp"
                    android:background="@color/scnd_blue_white"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/btn_theme_1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/rubik"
                                android:text="ADD ABOUT CHECKUP"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <RelativeLayout
                        android:id="@+id/add_about_checkup_label"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/btn_theme_1"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/checkup_details_changeable_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD ABOUT CHECKUP"
                            android:textColor="@color/scnd_blue_white"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/checkup_details_container_about_checkup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/add_about_checkup_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="21dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/rubik"
                            android:text="DATE: 22 March, 2021"
                            android:textColor="@color/scnd_blue"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/add_about_check_edit"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="-158dp"
                            android:layout_marginLeft="-158dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="28dp"
                            android:layout_marginRight="28dp"
                            android:layout_marginBottom="11dp"
                            android:layout_toStartOf="@id/add_about_check_delete"
                            android:layout_toLeftOf="@id/add_about_check_delete"
                            android:background="@color/white"
                            android:src="@drawable/ic_edit" />

                        <androidx.constraintlayout.utils.widget.ImageFilterButton
                            android:id="@+id/add_about_check_delete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_above="@id/add_about_checkup_tv"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="21dp"
                            android:layout_marginRight="21dp"
                            android:layout_marginBottom="11dp"
                            android:background="@color/white"
                            android:src="@drawable/ic_delete" />

                        <EditText
                            android:id="@+id/add_about_checkup_tv"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@id/add_about_checkup_date"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/add_about_checkup_bg"
                            android:fontFamily="@font/rubik"
                            android:gravity="start"
                            android:paddingStart="13dp"
                            android:paddingLeft="13dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="13dp"
                            android:paddingBottom="6dp"
                            android:text="TYPE HERE"
                            android:textAlignment="textStart"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/checkup_details_container_xray_scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        android:background="@drawable/add_x_ray_scan_image_bg"
                        android:gravity="center_horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/attach_the_file_vg"
                            android:layout_marginTop="34dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.utils.widget.ImageFilterButton
                                android:id="@+id/checkup_upload_picture"
                                android:layout_width="24dp"
                                android:layout_height="20dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="21dp"
                                android:layout_marginRight="21dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_upload_picture" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/checkup_upload_picture"
                                android:layout_toRightOf="@id/checkup_upload_picture"
                                android:fontFamily="@font/rubik"
                                android:text="ATTACH THE FILE"
                                android:textColor="@color/scnd_blue"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <TextView
                            android:id="@+id/or_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/attach_the_file_vg"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="24dp"
                            android:fontFamily="@font/rubik"
                            android:text="OR"
                            android:textColor="@color/scnd_grey"
                            android:textSize="12sp" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/take_picture_vg"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/or_tv"
                            android:layout_marginBottom="36dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.utils.widget.ImageFilterButton
                                android:id="@+id/checkup_take_picture"
                                android:layout_width="24dp"
                                android:layout_height="20dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="21dp"
                                android:layout_marginRight="21dp"
                                android:background="@color/white"
                                android:src="@drawable/ic_take_picture" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik"
                                android:text="TAKE PHOTO"
                                android:textColor="@color/scnd_blue"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </RelativeLayout>

                    <Button
                        android:id="@+id/checkup_details_save_button"
                        android:layout_width="92dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_theme_1"
                        android:fontFamily="@font/rubik"
                        android:text="SAVE"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:id="@+id/add_about_checkup"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/add_label_theme"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/add_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD ABOUT CHECKUP"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/add_xray_scan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/add_label_theme">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD X-RAY/SCAN"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/add_appointment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/add_label_theme">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD APPOINTMENT"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>


    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>