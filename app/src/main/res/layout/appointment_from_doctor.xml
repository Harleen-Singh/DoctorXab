<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/appointment_with_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="ADD APPOINTMENT WITH"
            android:textColor="@color/scnd_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/appointment_patient_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/appointment_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="Sam Perry"
            android:textColor="@color/scnd_blue"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/select_date_label"
            app:layout_constraintEnd_toEndOf="@id/appointment_with_label"
            app:layout_constraintStart_toStartOf="@id/appointment_with_label"
            app:layout_constraintTop_toBottomOf="@id/appointment_with_label" />

        <TextView
            android:id="@+id/select_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="Select Date"
            android:textColor="@color/scnd_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/selected_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_patient_name" />


        <TextView
            android:id="@+id/selected_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/add_about_checkup_bg"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:hint="Select Date"
            android:isScrollContainer="true"
            android:paddingStart="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="6dp"
            android:paddingEnd="13dp"
            android:paddingBottom="6dp"
            android:scrollbars="vertical"
            android:textAlignment="center"
            android:textColor="@color/scnd_blue"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/select_time_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_date_label" />


        <TextView
            android:id="@+id/select_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="Select Time"
            android:textColor="@color/scnd_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/selected_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selected_date" />


        <TextView
            android:id="@+id/selected_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/add_about_checkup_bg"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:hint="Select Time"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:paddingStart="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="6dp"
            android:paddingEnd="13dp"
            android:paddingBottom="6dp"
            android:scrollbars="vertical"
            android:textAlignment="center"
            android:textColor="@color/scnd_blue"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_time_label" />


        <Button
            android:id="@+id/add_appointment_with_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_theme_1"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="22dp"
            android:paddingTop="16dp"
            android:paddingEnd="22dp"
            android:paddingBottom="16dp"
            android:text="Add Appointment"
            android:textColor="@color/app.compat.light"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selected_time" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>