<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/add_checkup_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeFragments.CheckupDetailsPatient">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"

            android:layout_marginLeft="26dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="26dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@drawable/app_back_button" />

            <TextView
                android:id="@+id/settings_label_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:gravity="center"
                android:text="CHECKUP DETAILS"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <ScrollView
            android:id="@+id/ckscrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/doctor_profile_image_save"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/profile_toolbar"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/doctor_profile_image" />

                    <TextView
                        android:id="@+id/doctor_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/rubik_bold"
                        android:gravity="center"
                        android:text="Dr.Sumit Dadwal"
                        android:textColor="@color/scnd_blue"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"

                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik"
                            android:text="CASE OF:"
                            android:textColor="#454545"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/rubik"
                            android:text="ORTHOLOGIST"
                            android:textColor="@color/scnd_blue"
                            android:textSize="16sp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik"
                            android:text="AGE:"
                            android:textColor="#454545"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/email_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/rubik"
                            android:text="34"
                            android:textColor="@color/scnd_blue"
                            android:textSize="16sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik"
                            android:text="GENDER"
                            android:textColor="#454545"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/rubik"
                            android:text="FEMALE"
                            android:textColor="@color/scnd_blue"
                            android:textSize="16sp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/callbg"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_below="@+id/profile_toolbar"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_call_db" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/rubik"
                                android:text="CALL"
                                android:textColor="#454545"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/callbg"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_below="@+id/profile_toolbar"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sharedb" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/rubik"
                                android:text="SHARE"
                                android:textColor="#454545"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/callbg"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_below="@+id/profile_toolbar"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"

                                    android:src="@drawable/ic_messagedb" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/rubik"
                                android:text="CHAT"
                                android:textColor="#454545"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/callbg"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_below="@+id/profile_toolbar"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"

                                    android:src="@drawable/ic_editdb" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/rubik"
                                android:text="EDIT"
                                android:textColor="#454545"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="178dp"
                    android:background="@color/scnd_blue_white"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/btn_theme_1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/rubik"
                                android:text="ADD ABOUT CHECKUP"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/add_label_theme">

                        <TextView
                            android:id="@+id/add_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD ABOUT CHECKUP"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/add_label_theme">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD X-RAY/SCAN"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/add_label_theme">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/rubik"
                            android:text="ADD APPOINTMENT"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>


    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>