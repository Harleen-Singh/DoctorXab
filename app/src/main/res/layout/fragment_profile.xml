<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/parent_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".HomeFragments.ProfileFragment">


        <ScrollView
            android:id="@+id/vertical_scrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/doctor_profile_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/profile_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="26dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/profile_back_button"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:src="@drawable/app_back_button" />

                        <TextView
                            android:id="@+id/settings_label_safe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik"
                            android:gravity="center"
                            android:text="PROFILE"
                            android:textColor="@color/black"
                            android:textSize="24sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/doctor_profile_image_save"
                        android:layout_width="148dp"
                        android:layout_height="154dp"
                        android:layout_below="@+id/profile_toolbar"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/doctor_profile_image" />


                    <androidx.appcompat.widget.LinearLayoutCompat

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctor_profile_image_save"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"

                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/doctor_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_bold"
                            android:gravity="center"
                            android:textColor="@color/scnd_blue"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/rubik"
                            android:gravity="center"
                            android:text="ORTHOLOGIST"
                            android:textColor="@color/scnd_blue"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="40dp"
                            android:background="@color/scnd_light_blue" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/name_email_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/email_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik"
                                android:text="EMAIL:"
                                android:textColor="#454545"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/email_address_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/rubik"

                                android:textColor="@color/scnd_blue"
                                android:textSize="16sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/scnd_light_blue" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/contact_number_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/contact_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik"
                                android:text="CONTACT:"
                                android:textColor="#454545"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/contact_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/scnd_blue"
                                android:textSize="16sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/scnd_light_blue" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/button_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="49dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/saved_save_button"
                                android:layout_width="92dp"
                                android:layout_height="50dp"
                                android:background="@drawable/btn_theme_1"
                                android:clickable="true"
                                android:focusable="true"
                                android:fontFamily="@font/rubik_medium"
                                android:text="Save"
                                android:textColor="@color/app.compat.light"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/saved_edit_button"
                                android:layout_width="92dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="40dp"
                                android:background="@drawable/save_button_theme"
                                android:clickable="true"
                                android:focusable="true"
                                android:fontFamily="@font/rubik_medium"
                                android:text="Edit"
                                android:textColor="@color/scnd_blue"
                                android:textSize="14sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doctor_profile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="39dp"
                            android:fontFamily="@font/rubik"
                            android:gravity="center"
                            android:text="PROFILE"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/doctor_profile_image_edit"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_below="@id/profile_label"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="60dp"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/doctor_profile_image" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/text_field_1"
                            android:hint="Name"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:singleLine="true"
                            android:textColor="#8B91AB"
                            android:textColorHint="#8B91AB"
                            android:textSize="14sp"
                            android:theme="@style/EditTextTheme" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/doctor_email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/text_field_1"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:singleLine="true"
                            android:textColor="#8B91AB"
                            android:textColorHint="#8B91AB"
                            android:textSize="14sp"
                            android:theme="@style/EditTextTheme" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/doctor_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/text_field_1"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:singleLine="true"
                            android:textColor="#8B91AB"
                            android:textColorHint="#8B91AB"
                            android:textSize="14sp"
                            android:theme="@style/EditTextTheme" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/doctor_speciality"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="55dp"
                            android:background="@drawable/text_field_1"
                            android:hint="Speciality"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:singleLine="true"
                            android:textColor="#8B91AB"
                            android:textColorHint="#8B91AB"
                            android:textSize="14sp"
                            android:theme="@style/EditTextTheme" />


                        <Button
                            android:id="@+id/btn_edit_save"
                            android:layout_width="92dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="55dp"
                            android:layout_marginBottom="39dp"
                            android:background="@drawable/btn_theme_1"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/rubik_medium"
                            android:text="Save"
                            android:textColor="@color/app.compat.light"
                            android:textSize="14sp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </ScrollView>


        <ProgressBar
            android:id="@+id/profile_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
