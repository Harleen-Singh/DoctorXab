<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/scnd_blue_white"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/scnd_blue_white"
            android:contentDescription="TODO"
            android:src="@drawable/ic_baseline_close_24" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="63dp"
            android:src="@drawable/home_profile" />

        <TextView
            android:id="@+id/nav_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="ADMIN NAME"
            android:layout_marginBottom="10dp"
            android:textColor="@color/theme"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_profile_specility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:text="ORTHOLOGIST"
            android:textColor="@color/scnd_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B91AB" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>