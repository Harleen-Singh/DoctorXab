<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="FilterData"
            type="com.example.doc_app_android.data_model.FilterData" />

    </data>

    <RelativeLayout
        android:id="@+id/button_single_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@color/scnd_blue_white"
        android:backgroundTint="@color/scnd_blue_white"
        android:layout_marginRight="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/btn_theme_2"
            android:clickable="true"
            android:focusable="true"
            android:text="@{FilterData.filter}"
            android:textColor="@color/scnd_grey"
            android:paddingHorizontal="5dp"
            android:textSize="14sp" />

    </RelativeLayout>
</layout>